<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="450px"
    android:background="@drawable/qr_code_bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/common_dimen_15dp">


    <TextView
        android:id="@+id/title_msg_many"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="可提现金额:"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_17sp" />

    <zhcw.lottery.znzd.com.selflottery.widgets.ClearEditText
        android:id="@+id/et_add_many"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_dimen_15dp"
        android:background="@drawable/tv_bg"
        android:gravity="center"
        android:hint="请输入提现金额"
        android:inputType="numberDecimal"
        android:padding="@dimen/common_dimen_10dp"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_dimen_3dp"
        android:text="全部提现" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_dimen_3dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_button"
            style="@style/dialog_button"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/common_dimen_25dp"
            android:background="@drawable/gray_button_background"
            android:text="@string/dialog_cancel" />

        <Button
            android:id="@+id/confirm_button"
            style="@style/dialog_button"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/common_dimen_25dp"
            android:background="@drawable/red_button_background"
            android:text="@string/dialog_ok" />
    </com.zhy.autolayout.AutoRelativeLayout>


</com.zhy.autolayout.AutoLinearLayout>