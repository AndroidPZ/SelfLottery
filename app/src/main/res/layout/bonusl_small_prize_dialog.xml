<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">


    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="900px"
        android:layout_height="880px"
        android:layout_centerInParent="true"
        android:background="@mipmap/bonus_small_bg"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/guang_rotate"
            android:layout_width="1000px"
            android:layout_height="1000px"
            android:layout_centerInParent="true"
            android:background="@mipmap/guang" />

        <ImageView
            android:layout_width="300px"
            android:layout_height="230px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="230px"
            android:background="@mipmap/bonus_small_msg" />

        <TextView
            android:id="@+id/tv_bomb_msg"
            android:layout_marginLeft="60px"
            android:layout_marginRight="60px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bottom_im_bonus"
            android:layout_marginBottom="30px"
            android:gravity="center"
            android:text="--"
            android:textColor="@color/pink_900"
            android:textSize="17sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/bottom_im_bonus"
            android:layout_width="@dimen/common_dimen_145dp"
            android:layout_height="@dimen/common_dimen_45dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30px"
            android:background="@mipmap/bottom_bt_bonus_dialog" />
    </com.zhy.autolayout.AutoRelativeLayout>


</com.zhy.autolayout.AutoRelativeLayout>