<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/common_dimen_20dp"
    android:paddingTop="@dimen/common_dimen_20dp">
    <LinearLayout
        android:id="@+id/ll_jdcard_certification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/common_dimen_80dp"
                android:layout_height="@dimen/common_dimen_80dp"
                android:background="@drawable/ic_jdcard_round"
                 />
            <ImageView
                android:layout_width="@dimen/common_dimen_60dp"
                android:layout_height="@dimen/common_dimen_60dp"
                android:src="@mipmap/ic_jdcard_certification"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实名认证"
            android:textSize="@dimen/text_size_14sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="@dimen/common_dimen_5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 您尚未实名认证无法提现!"
            android:textSize="@dimen/text_size_12sp"
            android:layout_marginTop="@dimen/common_dimen_5dp"/>
        <TextView
            android:id="@+id/tv_jdcard_certification_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去认证"
            android:textSize="@dimen/text_size_16sp"
            android:textColor="@color/white"
            android:background="@drawable/exit_bg"
            android:paddingLeft="@dimen/common_dimen_30dp"
            android:paddingRight="@dimen/common_dimen_30dp"
            android:paddingTop="@dimen/common_dimen_5dp"
            android:paddingBottom="@dimen/common_dimen_5dp"
            android:layout_marginTop="@dimen/common_dimen_20dp"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_jdcard_certification_dialog_close"
        android:layout_width="@dimen/common_dimen_30dp"
        android:layout_height="@dimen/common_dimen_30dp"
        android:src="@drawable/ic_jdcard_certification_close"
        android:layout_marginRight="@dimen/common_dimen_10dp"
        android:layout_alignParentRight="true"/>


</RelativeLayout>