<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2px"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="2px"
        android:background="@color/white"
        android:orientation="horizontal">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp">

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/rouqi_lottery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/ssq_zhixuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_lottery_red_zhi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_dimen_6dp"
                        android:gravity="center_vertical"
                        android:singleLine="false"
                        android:textColor="@color/red2"
                        android:textSize="16sp"
                        tools:text="16-18-20-26-27-33" />

                    <TextView
                        android:id="@+id/text_lottery_blue_zhi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/common_dimen_8dp"
                        android:layout_marginTop="@dimen/common_dimen_6dp"
                        android:layout_toEndOf="@+id/text_lottery_red"
                        android:gravity="center_vertical"
                        android:singleLine="false"
                        android:textColor="@color/blue"
                        android:textSize="16sp"
                        tools:text="" />

                </com.zhy.autolayout.AutoLinearLayout>

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rouqi_lottery"
                android:layout_marginBottom="@dimen/common_dimen_7dp"
                android:layout_marginTop="@dimen/common_dimen_7dp">

                <TextView
                    android:id="@+id/text_play_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/title_text_color"
                    android:textSize="14sp"
                    tools:text="[单式]" />

                <TextView
                    android:id="@+id/text_lottery_stake"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/common_dimen_12dp"
                    android:layout_toEndOf="@id/text_play_type"
                    android:singleLine="true"
                    android:textColor="@color/title_text_color"
                    android:textSize="14sp"
                    tools:text="5注" />

                <TextView
                    android:layout_toEndOf="@+id/text_lottery_stake"
                    android:id="@+id/text_lottery_amount"
                    android:layout_marginStart="@dimen/common_dimen_15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/title_text_color"
                    android:textSize="14sp"
                    tools:text="10元" />

                <TextView
                    android:id="@+id/text_print_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/common_dimen_10dp"
                    android:textColor="@color/title_text_color"
                    android:textSize="14sp"
                    tools:text="未出票" />

            </com.zhy.autolayout.AutoRelativeLayout>

        </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoRelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/common_dimen_20dp"
        android:layout_marginEnd="@dimen/common_dimen_25dp"
        android:background="@color/invest" />

</com.zhy.autolayout.AutoLinearLayout>