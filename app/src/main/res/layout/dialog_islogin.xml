<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="850px"
    android:layout_height="350px"
    android:layout_gravity="center"
    android:background="@drawable/dialog_bg">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="温馨提示"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_16sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/common_dimen_10dp"/>
    <TextView
        android:id="@+id/tv_msg_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您尚未登录请登录"
        android:textSize="@dimen/text_size_14sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/common_dimen_10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/main_tab_driver"
        android:layout_marginTop="@dimen/common_dimen_20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">
        <TextView
            android:id="@+id/tv_islogn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取消"
            android:textSize="@dimen/text_size_16sp"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/main_tab_driver"/>
        <TextView
            android:id="@+id/tv_islogn_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="确认"
            android:textSize="@dimen/text_size_16sp"
            android:textColor="@color/red_600"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"/>

    </LinearLayout>

</LinearLayout>