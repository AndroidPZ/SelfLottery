<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/common_dimen_5dp">

    <ImageView
        android:id="@+id/tab_image"
        android:layout_width="@dimen/common_dimen_20dp"
        android:layout_height="@dimen/common_dimen_20dp" />

    <TextView
        android:id="@+id/tab_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_dimen_5dp"
        android:textColor="@drawable/sel_tab_text_color"
        android:textSize="@dimen/text_size_13sp" />
</LinearLayout>