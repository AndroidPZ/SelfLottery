<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wave="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/investhui">


    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:background="@color/colorPrimary"
        android:padding="@dimen/common_dimen_10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingTop="@dimen/common_dimen_15dp"
            android:text="@string/tab_manager2"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16sp" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/headers"
        android:layout_width="match_parent"
        android:layout_height="450px"
        android:layout_below="@id/toolbar"
        android:background="@mipmap/user_info_bg">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_my_head_pic"
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50px"
            fresco:fadeDuration="300"
            fresco:failureImage="@mipmap/headimg"
            fresco:failureImageScaleType="fitXY"
            fresco:placeholderImage="@mipmap/headimg"
            fresco:placeholderImageScaleType="fitXY" />

        <ImageView
            android:id="@+id/iv_my_default_head_pic"
            android:layout_width="220px"
            android:layout_height="220px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50px"
            android:src="@mipmap/headimg"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_my_pic_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_dimen_10dp"
            android:src="@drawable/ic_next_while"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/telephone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30px"
            android:text="-----------"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <zhcw.lottery.znzd.com.selflottery.widgets.AnimationTask.WaveViewBySinCos
                android:id="@+id/wave_sin"
                android:layout_width="match_parent"
                android:layout_height="13dp"
                wave:waveAmplitude="5dp"
                wave:waveColor="@color/darker_gray"
                wave:waveFillType="bottom"
                wave:waveSpeed="2"
                wave:waveStart="true"
                wave:waveStartPeriod="1"
                wave:waveType="sin" />

            <zhcw.lottery.znzd.com.selflottery.widgets.AnimationTask.WaveViewBySinCos
                android:id="@+id/wave_sin2"
                android:layout_width="match_parent"
                android:layout_height="13dp"
                wave:waveAmplitude="5dp"
                wave:waveColor="@color/lighter_gray"
                wave:waveFillType="bottom"
                wave:waveSpeed="3"
                wave:waveStart="true"
                wave:waveStartPeriod="0"
                wave:waveType="sin" />
        </FrameLayout>

    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/my_wallet"
        android:layout_width="match_parent"
        android:layout_height="@dimen/wode_mylist_height"
        android:layout_below="@id/headers"
        android:layout_marginTop="20px"
        android:background="@drawable/my_list_selector">

        <ImageView
            android:layout_width="@dimen/wode_mylist_width_img"
            android:layout_height="@dimen/wode_mylist_height_img"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25px"
            fresco:srcCompat="@drawable/ic_assets" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="190px"
            android:text="@string/item_manager1"
            android:textColor="@color/colormytext"
            android:textSize="@dimen/wode_text_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="70px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            fresco:srcCompat="@drawable/copon_right_arrow" />

    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:visibility="gone"
        android:id="@+id/my_certification"
        android:layout_width="match_parent"
        android:layout_height="@dimen/wode_mylist_height"
        android:layout_below="@id/my_wallet"
        android:layout_marginTop="5px"
        android:background="@drawable/my_list_selector">

        <ImageView
            android:layout_width="@dimen/wode_mylist_width_img"
            android:layout_height="@dimen/wode_mylist_height_img"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25px"
            fresco:srcCompat="@drawable/ic_certification" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="190px"
            android:text="@string/item_manager2"
            android:textColor="@color/colormytext"
            android:textSize="@dimen/wode_text_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/common_dimen_20dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/common_dimen_15dp"
            android:layout_toLeftOf="@+id/type_shiming"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_my_certification_ico"
                android:layout_width="@dimen/common_dimen_15dp"
                android:layout_height="@dimen/common_dimen_15dp"
                fresco:srcCompat="@drawable/ic_person_certification_no"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/tv_my_certification_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_dimen_5dp"
                android:text="未认证"
                android:textColor="@color/red_600" />
        </LinearLayout>

        <ImageView
            android:id="@+id/type_shiming"
            android:layout_width="wrap_content"
            android:layout_height="70px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            fresco:srcCompat="@drawable/copon_right_arrow" />


    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/my_shenfen"
        android:layout_width="match_parent"
        android:layout_height="@dimen/wode_mylist_height"
        android:layout_below="@id/my_certification"
        android:layout_marginTop="5px"
        android:background="@drawable/my_list_selector">

        <ImageView
            android:layout_width="@dimen/wode_mylist_width_img"
            android:layout_height="@dimen/wode_mylist_height_img"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25px"
            fresco:srcCompat="@drawable/ic_shenfen" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="190px"
            android:text="@string/item_manager4"
            android:textColor="@color/colormytext"
            android:textSize="@dimen/wode_text_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/common_dimen_20dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/common_dimen_15dp"
            android:layout_toLeftOf="@+id/temp_shenfen"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_my_shenfen_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_dimen_5dp"
                android:text="未认证"
                android:textColor="@color/red_600"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:id="@+id/temp_shenfen"
            android:layout_width="wrap_content"
            android:layout_height="70px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            fresco:srcCompat="@drawable/copon_right_arrow" />


    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/my_details"
        android:layout_width="match_parent"
        android:layout_height="@dimen/wode_mylist_height"
        android:layout_below="@id/my_shenfen"
        android:layout_marginTop="5px"
        android:background="@drawable/my_list_selector">

        <ImageView
            android:layout_width="@dimen/wode_mylist_width_img"
            android:layout_height="@dimen/wode_mylist_height_img"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25px"
            fresco:srcCompat="@drawable/ic_detail" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="190px"
            android:text="@string/item_manager3"
            android:textColor="@color/colormytext"
            android:textSize="@dimen/wode_text_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="70px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            fresco:srcCompat="@drawable/copon_right_arrow" />


    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/my_seting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/wode_mylist_height"
        android:layout_below="@id/my_details"
        android:layout_marginTop="5px"
        android:background="@drawable/my_list_selector">

        <ImageView
            android:layout_width="@dimen/wode_mylist_width_img"
            android:layout_height="@dimen/wode_mylist_height_img"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25px"
            fresco:srcCompat="@drawable/ic_setting" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="190px"
            android:text="@string/item_manager6"
            android:textColor="@color/colormytext"
            android:textSize="@dimen/wode_text_size" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_dimen_5dp"
            android:layout_marginRight="@dimen/common_dimen_10dp"
            android:layout_toLeftOf="@+id/type_im"
            android:text="*长按退出登录"
            android:textColor="@color/grey_600"
            android:textSize="@dimen/text_size_12sp" />


        <ImageView
            android:id="@+id/type_im"
            android:layout_width="wrap_content"
            android:layout_height="70px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            fresco:srcCompat="@drawable/copon_right_arrow" />
    </com.zhy.autolayout.AutoRelativeLayout>


</com.zhy.autolayout.AutoRelativeLayout>
