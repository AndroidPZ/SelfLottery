<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/about_us_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_200"
    android:clipToPadding="false"
    android:paddingTop="@dimen/common_dimen_25dp"
    tools:showIn="@layout/activity_about_us">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_10">

        <ImageView
            android:layout_width="@dimen/common_dimen_60dp"
            android:layout_height="@dimen/common_dimen_60dp"
            android:layout_gravity="center"
            android:background="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/aboutVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/common_dimen_10dp"
            android:gravity="center"
            android:text="@string/app_name"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="@color/grey_800"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:background="@drawable/bt_bg_r"
            android:padding="@dimen/common_dimen_5dp"
            android:textStyle="bold"
            android:id="@+id/tv_tuiguang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_dimen_16dp"
            android:layout_marginTop="@dimen/common_dimen_8dp"
            android:textColor="@color/grey_800"
            tools:text="感谢推广:点击展示推广码(即可下载)" />

        <TextView
            android:id="@+id/aboutContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_dimen_16dp"
            android:textColor="@color/grey_700"
            tools:text="@string/about_content" />

        <TextView
            android:id="@+id/tv_customer_service_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/common_dimen_16dp"
            android:layout_marginBottom="@dimen/common_dimen_5dp"
            android:textColor="@color/grey_800"
            tools:text="客服电话:" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
