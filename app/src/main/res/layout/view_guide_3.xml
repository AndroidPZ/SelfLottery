<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="@color/black">

    
    <!--  android:background="@mipmap/guide_add_1"-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      >

        <ImageView
            android:id="@+id/iv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/common_dimen_80dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/guide_add_2" />

        <Button
            android:id="@+id/bt"
            android:layout_width="@dimen/common_dimen_150dp"
            android:layout_height="@dimen/common_dimen_45dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/common_dimen_150dp"
            android:background="@mipmap/guide_bt" />
    </RelativeLayout>

</RelativeLayout>