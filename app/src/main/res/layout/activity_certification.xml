<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:titlebar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">
    <include layout="@layout/common_title_bar"/>
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/certification_sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/certification_remark_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/common_dimen_10dp"
                    android:paddingTop="@dimen/common_dimen_10dp"
                    android:paddingBottom="@dimen/common_dimen_10dp"
                    android:text="*点击图片上传身份证,请上传真实的身份证,身份证上传之后无法修改!!!"
                    android:textSize="@dimen/text_size_13sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="82dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="82dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="身份证证件照"
                                android:textColor="@android:color/black"
                                android:textSize="13sp" />
                            <TextView
                                android:layout_width="82dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="(头像面)"
                                android:textColor="@android:color/black"
                                android:textSize="13sp" />
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:background="@mipmap/idcard_head">
                            <com.lqm.roundview.RoundImageView
                                android:id="@+id/certification_idcard1_iv"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                app:corner_radius="10dp"/>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="82dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="82dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="身份证证件照"
                                android:textColor="@android:color/black"
                                android:textSize="13sp" />
                            <TextView
                                android:layout_width="82dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="(国徽面)"
                                android:textColor="@android:color/black"
                                android:textSize="13sp" />
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:background="@mipmap/idcard_emblem">
                            <com.lqm.roundview.RoundImageView
                                android:id="@+id/certification_idcard2_iv"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                app:corner_radius="10dp"/>
                        </RelativeLayout>
                    </LinearLayout>

                    <include
                        layout="@layout/cell_certification_messge"/>

                    <TextView
                        android:id="@+id/tv_certification_deposit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_selector"
                        android:text="提交"
                        android:textSize="@dimen/text_size_18sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/common_dimen_30dp"
                        android:layout_marginRight="@dimen/common_dimen_30dp"
                        android:paddingTop="@dimen/common_dimen_10dp"
                        android:paddingBottom="@dimen/common_dimen_10dp"
                        android:layout_marginTop="@dimen/common_dimen_30dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <include
        layout="@layout/cell_ocr_item"
        android:visibility="gone" />
</LinearLayout>
