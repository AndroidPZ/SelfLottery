<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/fanhui_detail_dialog"
        android:layout_width="81px"
        android:layout_height="80px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40px"
        android:layout_marginTop="40px"
        android:background="@mipmap/tx_delete" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fanhui_detail_dialog"
        android:layout_marginTop="10px"
        android:gravity="center"
        android:text="请扫描取票"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_23sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/qrcode_img"
        android:layout_width="580px"
        android:layout_height="580px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120px" />

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="700px"
        android:layout_height="90px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40px"
        android:background="@drawable/qr_code_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:text="详情"
        android:textColor="@color/black"
        android:textSize="14sp">
    </TextView>
</com.zhy.autolayout.AutoRelativeLayout>